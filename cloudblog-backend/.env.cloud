APP_NAME=CloudBlog
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-app-service-url

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database (from Azure Key Vault)
DB_CONNECTION=@Microsoft.KeyVault(SecretUri=https://cloudblog-kv-aya.vault.azure.net/secrets/db-connection/)
DB_HOST=@Microsoft.KeyVault(SecretUri=https://cloudblog-kv-aya.vault.azure.net/secrets/db-host/)
DB_PORT=@Microsoft.KeyVault(SecretUri=https://cloudblog-kv-aya.vault.azure.net/secrets/db-port/)
DB_DATABASE=@Microsoft.KeyVault(SecretUri=https://cloudblog-kv-aya.vault.azure.net/secrets/db-database/)
DB_USERNAME=@Microsoft.KeyVault(SecretUri=https://cloudblog-kv-aya.vault.azure.net/secrets/db-username/)
DB_PASSWORD=@Microsoft.KeyVault(SecretUri=https://cloudblog-kv-aya.vault.azure.net/secrets/db-password/)

# Azure Entra External ID (from Ali)
B2C_FRONTEND_CLIENT_ID=@Microsoft.KeyVault(SecretUri=https://cloudblog-kv-aya.vault.azure.net/secrets/b2c-frontend-client-id/)
B2C_BACKEND_CLIENT_ID=@Microsoft.KeyVault(SecretUri=https://cloudblog-kv-aya.vault.azure.net/secrets/b2c-backend-client-id/)
B2C_CLIENT_SECRET=@Microsoft.KeyVault(SecretUri=https://cloudblog-kv-aya.vault.azure.net/secrets/b2c-client-secret/)
B2C_TENANT_ID=@Microsoft.KeyVault(SecretUri=https://cloudblog-kv-aya.vault.azure.net/secrets/b2c-tenant-id/)
B2C_USER_FLOW=@Microsoft.KeyVault(SecretUri=https://cloudblog-kv-aya.vault.azure.net/secrets/b2c-user-flow/)
B2C_DOMAIN=@Microsoft.KeyVault(SecretUri=https://cloudblog-kv-aya.vault.azure.net/secrets/b2c-domain/)
B2C_OPENID_ENDPOINT=@Microsoft.KeyVault(SecretUri=https://cloudblog-kv-aya.vault.azure.net/secrets/b2c-openid-endpoint/)

# Extra Laravel settings
CACHE_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120
